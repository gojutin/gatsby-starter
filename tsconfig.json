{
  "include": [
    "./src/ts/**/*",
  ],
  "exclude": [
    "node_modules",
  ],
  "compilerOptions": {
    "target": "es5",
    "jsx": "react",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    // "typesRoot": [
    //   "node_modules/@types/",
    //   "./src/@types/"
    // ],
    }
}